<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="8dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/bg_16dp_radius_coloronprimary"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewUserIcon"
        android:layout_width="48dp"
        android:layout_margin="1dp"
        android:layout_height="48dp"
        app:cardBackgroundColor="?attr/colorOnPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="50dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        >

        <ImageView
            android:id="@+id/ivProfilePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/profile_image"
            android:src="@drawable/ic_user"
            />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/cardViewUserIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="16dp"
        >

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/NunitoMedium16secondary"
            android:text="Sushant Neupane"
            android:layout_marginVertical="2dp"
            />

        <TextView
            android:id="@+id/tvLatestMessageBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:layout_marginVertical="2dp"
            style="@style/SourceSansProRegular11Grey"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="This is a random text that the user had sent to the another user "
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>